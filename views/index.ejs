                            <p>Banner4</p></li>
                        <li><img alt="" src="img/banner/banner5.jpg" />
                            <p>Banner5</p></li>
                    </ul>
					<script type="text/javascript">
						$(function(){
							var leng = $(".m_pic li").length - 1;
							var t;

							function fnSlide(n){
								clearTimeout(t);
								$(".act").removeClass("act");
								$(".m_nav a:eq("+ n +")").addClass("act");
								$(".m_pic ul").stop().animate({ "left" : - n * 640 });
								n = n == leng ? 0 : n + 1;
								t = setTimeout(function(){ fnSlide(n); } , 3000);
							}

							$(".m_nav a").each(function(){
								$(this).mouseover(function(){
									var nId = $(this).index();
									fnSlide(nId)
								})
							});

							t = setTimeout(function(){ fnSlide(1); } , 3000);

						})
					</script>
                </div>
                <div class="m_nav">
                    <a class="act">1</a>
                    <a>2</a>
                    <a>3</a>
                    <a>4</a>
                    <a>5</a>
                </div>
            </div>
